<div class="min-h-screen flex flex-col items-center dark:bg-primary-dark bg-primary-light dark:text-secondary-dark text-secondary-light font-['Iosevka_Web']">
  <header id="header" class="h-header z-10 sticky top-0 w-full flex flex-row justify-center bg-code-secondary-light dark:bg-code-secondary-dark">
    <span class="m-3"><a href="https://ilyay.space" class="underline hover:no-underline hover:text-link-active text-link-inactive-light dark:text-link-inactive-dark">ilyay.space</a></span>
    <button id="toggle-light-btn" type="button" class="absolute right-0 m-3 underline hover:no-underline hover:text-link-active text-link-inactive-light dark:text-link-inactive-dark">toggle dark</button>
  </header>
  {% if toc %}
  <!-- ScrollSpy -->
  <nav class="lg:h-screen lg:top-0 lg:left-0 lg:pt-header lg:fixed lg:w-sidebar w-full dark:bg-primary-dark bg-primary-light">
    <div class="lg:h-full lg:overflow-y-auto lg:border-r-2 lg:border-b-0 border-b-2 border-secondary-light dark:border-secondary-dark lg:pr-3 lg:pb-0 pb-3 scrollbar dark:scrollbar-dark">
      {{toc}}
    </div>
  </nav>
  {% endif %}
  <div class="w-full {% if toc %}lg:pl-sidebar{% endif %} flex flex-row justify-center p-3 grow">
    <div class="max-w-3xl grow">
      {{contents}}
    </div>
  </div>
  <div class="h-fit {% if toc %}lg:pl-sidebar{% endif %} w-full p-3 flex justify-center bg-code-secondary-light dark:bg-code-secondary-dark">
    <div>
      Made with <a href="https://orgmode.org" class="underline hover:no-underline hover:text-link-active text-link-inactive-light dark:text-link-inactive-dark">Org mode</a>, © 2023 - ∞ iliayar
    </div>
    <!-- Right: Github -->
  </div>
</div>
